<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinanceApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/background_grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.FinanceApp" parent="Base.Theme.FinanceApp" />

    <style name="TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerFamily">rounded</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="textOutlineColor">@color/text_blue</item>
        <item name="android:textColorHint">#999999</item>
        <item name="hintTextColor">@color/text_blue</item>
        <item name="colorOutline">@color/text_blue</item>
        <item name="boxStrokeColor">@color/text_blue</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/rounded_blue_gradient_background</item>
        <item name="background">@drawable/rounded_blue_gradient_background</item>
    </style>

</resources>