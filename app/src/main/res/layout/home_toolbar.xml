<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_grey"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_nav_action"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:background="?actionBarItemBackground"
            android:padding="18dp"
            android:src="@drawable/baseline_menu_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:text="MyFin"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                android:textColor="@color/text_title_dark_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_toolbar_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                android:textColor="@color/text_title_dark_grey"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="+91 1234567890" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_menu_action"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:background="?actionBarItemBackground"
            android:padding="15dp"
            android:src="@drawable/add_icon" />

    </LinearLayout>

</com.google.android.material.appbar.AppBarLayout>